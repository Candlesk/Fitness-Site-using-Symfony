{% extends 'base.html.twig' %}

{% block title %}Exercise{% endblock %}

{% block body %}
    <h1>Exercise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercise.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exercise.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exercise.description }}</td>
            </tr>
            <tr>
                <th>MuscleGroup</th>
                <td>{{ exercise.muscleGroup }}</td>
            </tr>
            <tr>
                <th>Equipment</th>
                <td>{{ exercise.equipment }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ exercise.difficulty }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ exercise.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ exercise.createdAt ? exercise.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ exercise.updatedAt ? exercise.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exercice_index') }}">back to list</a>

    <a href="{{ path('app_exercice_edit', {'id': exercise.id}) }}">edit</a>

    {{ include('exercice/_delete_form.html.twig') }}
{% endblock %}
